<Page x:Class="ToursBase.Avtorizeichen.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToursBase.Avtorizeichen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid>
        <StackPanel  Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="Введите логин:" FontSize="20" />
            <TextBox Width="250" Margin="5"/>
            
            <Label Content="Введите пароль:" FontSize="20"/>
            <PasswordBox Width="250"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin ="0 16 0 0">
                <Button x:Name="enterButton" Click="enterButton_Click"
                        Content="Войти" Width="100"
                        Height="20" Margin="5"/>
                
                <Button x:Name="registrationButton" Click="registrationButton_Click" 
                        Content="Регистрация" Width="100"
                        Height="20" Margin="5" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
